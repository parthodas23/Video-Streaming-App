<!-- EJS (Embedded JavaScript) is a templating engine for Node.js that allows you to generate HTML dynamically using JavaScript.

Why Use EJS?
It lets you embed JavaScript code inside HTML.
It helps render dynamic content, like passing data from a server to a webpage.
It supports partials (reusable components like headers and footers).
It's easy to integrate with Express.js. -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Streaming App</title>
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js"></script>
    <script
      src="https://kit.fontawesome.com/1012bef8b4.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script>
      const ROOM_ID = "<% roomId %>";
    </script>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid"></div>
        </div>

        <div class="main__controls">
          <div class="main__controls__block">
            <div
              onclick="muteUnmute()"
              class="main__controls__button main__mute_button"
            >
              <i class="fa-solid fa-microphone"></i>
              <span>Mute</span>
            </div>
          
          </div>

          <div class="main__controls__block">
            <div
              onclick="playStop()"
              class="main__controls__button main__video_button"
            >
              <i class="fa-solid fa-video"></i>
              <span>Stop Video</span>
            </div>
           
          </div>

          <div class="main__controls__block">
            <button class="leave-meeting-btn" onclick="leaveMeeting()">
              <span class="icon">ðŸšª</span>
              Leave Meeting
            </button>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">
          <h5>Chat</h5>
        </div>
        <div class="main__chat_window">
          <ul class="messages"></ul>
        </div>
        <div class="main__messages_container">
          <input
            type="text"
            placeholder="Type message here..."
            id="chat_message"
          />
        </div>
      </div>
    </div>

    <script src="script.js"></script>
  </body>
</html>
